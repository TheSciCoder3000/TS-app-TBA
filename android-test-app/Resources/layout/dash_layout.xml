<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Dashboard"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:paddingLeft="70dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
            
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:id="@+id/textView1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:id="@+id/linearLayout1">

                <TextView
                    android:text="Today"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/sumwidget"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:elevation="15dp">

                <RelativeLayout
                    android:layout_width="175dp"
                    android:layout_height="175dp">

                    <ProgressBar
                        android:id="@+id/TaskProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/newcircle"
                        android:progress="50"/>

                    <TextView
                        android:text="7"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="65sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="17.56dp">


                    <TextView
                        android:text="Task Unfinished:"
                        android:layout_marginTop="17dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:progressTint="@color/unfinishedProgress"
                        android:progress="30"
                        android:id="@+id/progressBar1"
                        android:scaleY="2"/>


                    <TextView
                        android:text="Task Unfinished:"
                        android:layout_marginTop="17dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:progressTint="@color/finishedProgress"
                        android:progress="70"
                        android:id="@+id/progressBar2"
                        android:scaleY="2"/>


                    <TextView
                        android:text="Next Due Date:"
                        android:layout_marginTop="17dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/NextDueDate"
                        android:text="Dec 24, 2020"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="17dp"
                        android:textStyle="bold"
                        android:textColor="#FF2E2E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


</LinearLayout>

